<h1><%= t('view.show') %></h1>
<div><%= notice %></div>
<div><%= t('view.Title') %>: <%= @task.task_title %></div>
<div><%= t('view.Description') %>: <%= @task.task_description %></div>
<div><%= t('view.Limit') %>: <%= l @task.limit, format: :long %></div>
<div><%= t('view.Status') %>: <%= @task.status %></div>
<div><%= t('view.Priority') %>: <%= @task.priority %></div>
<div><%= t('view.Label') %>:
  <% @task.labels.each do |label| %>
    <%= label.name %>
  <% end %></div>
<div><%= link_to t('view.Index Task'), tasks_path, class: "btn btn-primary" %></div>
