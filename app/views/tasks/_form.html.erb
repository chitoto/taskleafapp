<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="task_title">
    <%= form.label :task_title %><br>
    <%= form.text_field :task_title %>
  </div>
  <div class="task_description">
    <%= form.label :task_description %><br>
    <%= form.text_field :task_description %>
  </div>
  <div class="task_limit">
    <%= form.label :limit %><br>
    <%= form.date_field :limit %>
  </div>
  <div class="task_status">
    <%= form.label :status %><br>
    <%= form.select :status, [["未着手", "未着手"], ["着手中", "着手中"], ["完了", "完了"]], include_blank: "選択して下さい" %>
  </div>
  <br>
  <div>
  <%= form.submit %>
  </div>
<% end %>
<br>
<%= link_to t('view.New Task'), new_task_path %>
