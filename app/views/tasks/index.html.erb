<h1>Task#index</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.task_title %></td>
    <td><%= task.task_description %></td>
    <td><%= link_to 'Show', task_path(task.id) %></td>
  </tr>
<% end %>
</table>
