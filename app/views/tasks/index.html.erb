<h1>Task#index</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.task_title %></td>
    <td><%= task.task_description %></td>
    <td><%= link_to 'Show', task_path(task.id) %></td>
    <td><%= link_to 'Edit', edit_task_path(task), data: { confirm: '編集してよろしいですか?' } %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: '削除してよろしいですか?' } %></td>
  </tr>
<% end %>
</table>
<br>
<%= link_to 'New Task', new_task_path %>
